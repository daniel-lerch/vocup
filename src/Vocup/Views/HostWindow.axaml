<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Vocup.Views"
        xmlns:vm="clr-namespace:Vocup.ViewModels;assembly=Vocup.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Vocup.Views.HostWindow"
        x:DataType="vm:HostWindowViewModel"
        Icon="/Assets/square-logo.ico"
        Title="Vocup"
        WindowStartupLocation="CenterScreen">

  <Window.DataTemplates>
    <DataTemplate DataType="{x:Type vm:MainViewModel}">
      <views:MainView />
    </DataTemplate>
  </Window.DataTemplates>

  <ContentControl Content="{Binding MainView}" />
</Window>
