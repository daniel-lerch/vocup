<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:Vocup.Models;assembly=Vocup.Core"
             xmlns:local="clr-namespace:Vocup.Avalonia.Views;assembly=Vocup.Avalonia"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Vocup.Avalonia.Views.BookSettingsView">

  <UserControl.Resources>
    <local:ComparisonConverter x:Key="converter" />
  </UserControl.Resources>

  <StackPanel MaxWidth="300" VerticalAlignment="Center">
    <TextBox Text="{Binding MotherTongue}" Watermark="Mother tongue" UseFloatingWatermark="True" />
    <TextBox Text="{Binding ForeignLanguage}" Watermark="Foreign language" UseFloatingWatermark="True" />
    <RadioButton IsChecked="{Binding PracticeMode, Converter={StaticResource converter}, ConverterParameter={x:Static models:PracticeMode.AskForForeignLanguage}}">
      Mother tongue → foreign language
    </RadioButton>
    <RadioButton IsChecked="{Binding PracticeMode, Converter={StaticResource converter}, ConverterParameter={x:Static models:PracticeMode.AskForMotherTongue}}">
      Foreign language → mother tongue
    </RadioButton>
    <Button Command="{Binding Commit}">Create</Button>
  </StackPanel>
  
</UserControl>
