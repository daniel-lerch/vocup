<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Vocup.Models;assembly=Vocup.Core"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Vocup.Avalonia.Views.BookView">

  <!-- TODO: Check whether ItemsRepeater might be more suitable in this place -->
  <StackPanel>
    <DataGrid>
      <DataGrid.Columns>
        <DataGridTextColumn Header="{Binding Book.MotherTongue}"/>
        <DataGridTextColumn Header="{Binding Book.ForeignLanguage}"/>
      </DataGrid.Columns>
    </DataGrid>
    <ScrollViewer Background="White">
      <ItemsRepeater Items="{Binding Book.Words}">
        <ItemsRepeater.ItemTemplate>
          <DataTemplate DataType="models:Word">
            <StackPanel Orientation="Horizontal">
              <TextBlock Text="{Binding MotherTongue[0].Value}"/>
              <TextBlock Text="{Binding ForeignLanguage[0].Value}"/>
            </StackPanel>
          </DataTemplate>
        </ItemsRepeater.ItemTemplate>
        <ItemsRepeater.Layout>
          <StackLayout Orientation="Vertical" />
        </ItemsRepeater.Layout>
      </ItemsRepeater>
    </ScrollViewer>
  </StackPanel>
</UserControl>
