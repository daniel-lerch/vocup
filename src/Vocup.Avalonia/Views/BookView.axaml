<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Vocup.Avalonia.Views.BookView">

  <!-- TODO: Check whether ItemsRepeater might be more suitable in this place -->
  <DataGrid>
    <DataGrid.Columns>
      <DataGridTextColumn Header="{Binding MotherTongue}"/>
      <DataGridTextColumn Header="{Binding ForeignLanguage}"/>
    </DataGrid.Columns>
  </DataGrid>
</UserControl>
